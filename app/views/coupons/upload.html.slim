css:
  input {
    vertical-align: middle;
    margin: 0;
    padding: 0
  }

  .file-box {
    position: relative;
    width: 1000px
  }

  .txt {
    height: 30px;
    border: 3px solid #cdcdcd;
    width: 500px;
  }

  .btn {
    background-color: #FFF;
    border: 3px solid #CDCDCD;
    height: 30px;
    width: 70px;
  }

  .file {
    position: absolute;
    top: 0;
    right: 80px;
    height: 30px;
    filter: alpha(opacity:0);
    opacity: 0;
    width: 260px
  }