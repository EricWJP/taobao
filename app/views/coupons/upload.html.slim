- if flash[:notice].present?
  javascript:
    alert("#{flash[:notice]}");

div class="file-box"
  = simple_form_for :file, :url => syn_db_coupons_path, html: { method: :post, class: "form-horizontal  form form-bordered", style: "text-align: center; vertical-align:middle" }, validate: true do |f|
    = f.file_field :myfile, required: true, style: "vertical-align:middle !important"
    = f.button :submit, :value => "添加"


